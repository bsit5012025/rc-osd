<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="dashboard"
            styleClass="dashboard"
            stylesheets="@../../styles/dashboard/dashboard.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.rocs.osd.controller.login.LoginController">

    <stylesheets>
        <URL value="@../../styles/dashboard/buttons.css" />
        <URL value="@../../styles/dashboard/label.css" />
        <URL value="@../../styles/dashboard/table.css" />
    </stylesheets>

    <StackPane AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <HBox>
            <VBox styleClass="menuBarContainer">

                <HBox styleClass="logoContainer">
                    <ImageView fitHeight="163.0" fitWidth="146.0" preserveRatio="true">
                        <Image url="@../../assets/RC_LOGO.png" />
                    </ImageView>

                    <VBox styleClass="logoTextContainer">
                        <Label id="rcText" text="Rogationist" />
                        <Label id="rcText" text="College" />
                    </VBox>
                </HBox>

                <VBox styleClass="buttonContainer">
                    <Button fx:id="dashboardBtn" styleClass="dashboardButtons" text="Dashboard" />
                    <Button fx:id="recordBtn" styleClass="dashboardButtons" text="Records" />
                    <Button fx:id="recordViolationBtn" styleClass="dashboardButtons" text="Record Violation" />
                    <Button fx:id="violationBtn" styleClass="dashboardButtons" text="Violations" />
                    <Button fx:id="studentAppealBtn" styleClass="dashboardButtons" text="Student Appeals" />
                    <Button fx:id="permissionBtn" styleClass="dashboardButtons" text="Permissions" />
                    <Button fx:id="settingBtn" styleClass="dashboardButtons" text="Settings" />
                    <Button fx:id="logoutBtn" onAction="#onLogout" styleClass="dashboardButtons" text="Logout" />
                </VBox>

            </VBox>

            <VBox id="mainContainer">

                <HBox id="headerContainer">
                    <Label styleClass="welcomeText" text="Welcome, User!" />
                </HBox>

                <HBox styleClass="dashboardContentContainer">

                    <VBox prefHeight="935.0" prefWidth="886.0">

                        <HBox styleClass="dashboardFirstDiv">
                            <VBox styleClass="dashboardMiniContainer">
                                <Label styleClass="dashboardTopTextLabel" text="Total Violations" />
                                <Label styleClass="dashboardTopNumberLabel" text="0" />
                            </VBox>

                            <VBox styleClass="dashboardMiniContainer">
                                <Label styleClass="dashboardTopTextLabel" text="Pending Appeals" />
                                <Label styleClass="dashboardTopNumberLabel" text="0" />
                            </VBox>

                            <VBox styleClass="dashboardMiniContainer">
                                <Label styleClass="dashboardTopTextLabel" text="Offenses Today" />
                                <Label styleClass="dashboardTopNumberLabel" text="0" />
                            </VBox>
                        </HBox>

                        <VBox styleClass="dashboardSecondDiv">

                            <VBox styleClass="dashboardContainer2">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
                                </VBox.margin>

                                <Label styleClass="dashboardTitleLabel" text="Most Frequent Offense Committed" />

                                <HBox>
                                    <Label styleClass="dashboardContentLabel" text="Sample" />
                                    <ProgressBar progress="0.5" />
                                </HBox>

                                <HBox>
                                    <Label styleClass="dashboardContentLabel" text="Sample" />
                                    <ProgressBar progress="0.7" />
                                </HBox>

                                <HBox>
                                    <Label styleClass="dashboardContentLabel" text="Sample" />
                                    <ProgressBar progress="0.3" />
                                </HBox>

                                <HBox>
                                    <Label styleClass="dashboardContentLabel" text="Sample" />
                                    <ProgressBar progress="0.10" />
                                </HBox>

                            </VBox>

                            <VBox styleClass="dashboardContainer2">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
                                </VBox.margin>
                                <Label styleClass="dashboardTitleLabel" text="Recent Violations" />
                                <TableView>
                                    <columns>
                                        <TableColumn prefWidth="75.0" text="Student ID" />
                                        <TableColumn prefWidth="75.0" text="Student Name" />
                                        <TableColumn prefWidth="75.0" text="Level of Offense" />
                                        <TableColumn prefWidth="75.0" text="Offense Type" />
                                        <TableColumn prefWidth="75.0" text="Date" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </VBox>

                        </VBox>

                    </VBox>

                    <VBox alignment="CENTER">
                        <VBox alignment="CENTER" spacing="10.0" styleClass="dashboardContainer3">
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>

                            <Label styleClass="monthLabel" text="January 2026" />
                            <Label styleClass="dayLabel" text="Saturday" />
                            <Label styleClass="dayNumberLabel" text="31" />

                        </VBox>

                        <VBox spacing="20.0" styleClass="dashboardContainer3">
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                            <Label styleClass="dashboardTitleLabel" text="Recent Activities" />
                            <Label styleClass="recentNumberLabel" text="1." />
                            <Label styleClass="recentNumberLabel" text="2." />
                            <Label styleClass="recentNumberLabel" text="3." />
                        </VBox>
                    </VBox>

                </HBox>

            </VBox>
        </HBox>
    </StackPane>
</AnchorPane>
