<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>

<BorderPane prefHeight="600.0"
            prefWidth="900.0"
            styleClass="mainBackground"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../../styles/student/student.css" />
    </stylesheets>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="0">
            <BorderPane.margin>
                <Insets bottom="20.0" />
            </BorderPane.margin>
            <children>
                <TextField fx:id="searchField"
                           prefHeight="35.0"
                           prefWidth="350.0"
                           promptText="Search student records..."
                           styleClass="searchBar" />

                <MenuButton mnemonicParsing="false" prefHeight="35.0"
                            styleClass="sortButton" text="Sort By">
                    <items>
                        <MenuItem text="Name (A-Z)" />
                        <MenuItem text="Name (Z-A)" />
                        <MenuItem text="Year Level (Ascending)" />
                        <MenuItem text="Year Level (Descending)" />
                    </items>
                </MenuButton>
            </children>
        </HBox>
    </top>

    <center>
        <TableView fx:id="studentTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn prefWidth="150.0" text="Student_ID" />
                <TableColumn prefWidth="250.0" text="Student Name" />
                <TableColumn prefWidth="150.0" text="Grade/Course" />
                <TableColumn prefWidth="150.0" text="Section" />
            </columns>

            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="" />
                    <String fx:value="" />
                    <String fx:value="" />
                    <String fx:value="" />
                    <String fx:value="" />
                    <String fx:value="" />
                </FXCollections>
            </items>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
