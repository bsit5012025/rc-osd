<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="750.0"
            prefWidth="1100.0"
            styleClass="rootPane"
            stylesheets="@../../styles/student/studentRecord.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

    <center>
        <VBox styleClass="mainContainer">
            <VBox styleClass="infoCard">
                <GridPane styleClass="formGrid">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="200.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="200.0" />
                    </columnConstraints>

                    <Label styleClass="formLabel" text="Full Name:" />
                    <TextField editable="false" focusTraversable="false" styleClass="uneditableField"
                               text="John Doe Hilda" GridPane.columnIndex="1" />

                    <Label styleClass="formLabel" text="Grade:" GridPane.columnIndex="2" />
                    <ComboBox maxWidth="Infinity" styleClass="customCombo" GridPane.columnIndex="3">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Grade 7" /> <String fx:value="Grade 8" />
                                <String fx:value="Grade 9" /> <String fx:value="Grade 10" />
                                <String fx:value="Grade 11" /> <String fx:value="Grade 12" />
                                <String fx:value="1st Year" /> <String fx:value="2nd Year" />
                                <String fx:value="3rd Year" /> <String fx:value="4th Year" />
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <Label styleClass="formLabel" text="Section:" GridPane.rowIndex="1" />
                    <TextField editable="false"
                               focusTraversable="false"
                               styleClass="uneditableField"
                               GridPane.columnIndex="1"
                               GridPane.rowIndex="1" />

                    <Label styleClass="formLabel"
                           text="Academic Year:"
                           GridPane.columnIndex="2"
                           GridPane.rowIndex="1" />
                    <TextField editable="false"
                               focusTraversable="false"
                               styleClass="uneditableField"
                               GridPane.columnIndex="3"
                               GridPane.rowIndex="1" />

                    <Label styleClass="formLabel" text="Guardian's Name:" GridPane.rowIndex="2" />
                    <TextField editable="false"
                               focusTraversable="false"
                               styleClass="uneditableField"
                               GridPane.columnIndex="1"
                               GridPane.rowIndex="2" />

                    <Label styleClass="formLabel"
                           text="Contact Number:"
                           GridPane.columnIndex="2"
                           GridPane.rowIndex="2" />
                    <TextField editable="false"
                               focusTraversable="false"
                               styleClass="uneditableField"
                               GridPane.columnIndex="3"
                               GridPane.rowIndex="2" />

                    <Label styleClass="formLabel" text="Complete Address:" GridPane.rowIndex="3" />
                    <TextField editable="false"
                               focusTraversable="false"
                               styleClass="uneditableField"
                               GridPane.columnIndex="1"
                               GridPane.rowIndex="3" />

                    <Label styleClass="formLabel"
                           text="Status:"
                           GridPane.columnIndex="2"
                           GridPane.rowIndex="3" />
                    <ComboBox maxWidth="Infinity"
                              styleClass="customCombo"
                              GridPane.columnIndex="3"
                              GridPane.rowIndex="3" />

                    <Label styleClass="formLabel" text="Student Type:" GridPane.rowIndex="4" />
                    <HBox styleClass="checkboxGroup" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <CheckBox mnemonicParsing="false" styleClass="customCheckbox" text="Intern" />
                        <CheckBox mnemonicParsing="false" styleClass="customCheckbox" text="Extern" />
                    </HBox>
                </GridPane>
            </VBox>

            <VBox styleClass="tableSection" VBox.vgrow="ALWAYS">
                <Label styleClass="sectionTitle" text="Offense History" />
                <TableView styleClass="offenseTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Offense Type" />
                        <TableColumn text="Level of Offense" />
                        <TableColumn text="Date" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <HBox styleClass="buttonBar">
                <Button mnemonicParsing="false" styleClass="backButton" text="Back" />
                <Button mnemonicParsing="false" styleClass="downloadButton" text="Download" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
